<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane id="AnchorPane" prefHeight="300.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="library.assistant.controller.NewbookController">
   <children>
      <VBox accessibleRole="IMAGE_VIEW" prefHeight="300.0" prefWidth="400.0">
         <children>
            <JFXTextField fx:id="bookidField" labelFloat="true" promptText="Book id">
               <VBox.margin>
                  <Insets left="10.0" right="10.0" top="20.0" />
               </VBox.margin>
            </JFXTextField>
            <JFXTextField fx:id="bookTitleField" labelFloat="true" layoutX="10.0" layoutY="30.0" promptText="Book Title">
               <VBox.margin>
                  <Insets left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </JFXTextField>
            <JFXTextField fx:id="authorField" labelFloat="true" layoutX="10.0" layoutY="30.0" promptText="Author">
               <VBox.margin>
                  <Insets left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </JFXTextField>
            <JFXTextField fx:id="publisherField" labelFloat="true" layoutX="10.0" layoutY="30.0" promptText="Publisher">
               <VBox.margin>
                  <Insets left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </JFXTextField>
            <HBox alignment="TOP_CENTER" prefHeight="120.0" prefWidth="381.0">
               <children>
                  <JFXButton fx:id="savebtn" onAction="#savebookInfo" prefHeight="68.0" prefWidth="143.0" text="Save" />
                  <JFXButton fx:id="cancelbtn" onAction="#closeWindow" prefHeight="68.0" prefWidth="143.0" text="Cancel" />
               </children>
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
